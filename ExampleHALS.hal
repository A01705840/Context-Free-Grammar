PROGRAM ExampleHAL
BEGIN
    DCL ALTITUDE REAL INIT(0.0);
    DCL VELOCITY REAL INIT(0.0);
    
    CALL UpdateVelocity;

    SUBROUTINE UpdateVelocity
    BEGIN
        IF ALTITUDE > 5000 THEN
            VELOCITY = 300.0;
        ELSE
            VELOCITY = 100.0;
        ENDIF;
        
        CALL DisplayVelocity(VELOCITY);
    END;

    SUBROUTINE DisplayVelocity(VEL REAL)
    BEGIN
        PRINT('Velocity is: ', VEL);
    END;
END;
